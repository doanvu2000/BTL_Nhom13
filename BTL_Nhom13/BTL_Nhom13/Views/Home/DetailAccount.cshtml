@model BTL_Nhom13.Models.TaiKhoan

@{
    ViewBag.Title = "DetailAccount";
}


@section ImportLibraryLogin {
    <link rel="stylesheet" href="~/wwwroot/css/style.css" />

    <style>
        .container {
        }

        .container {
            /*position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);*/
        }

        .signin-form {
            margin-top: 50px;
        }

            .signin-form .form-group {
                margin-bottom: 35px !important;
            }

        body .signin-form .form-group label {
            text-transform: none !important;
            font-size: 16px !important;
            color: gray !important;
        }

        body {
            font-family: Arial !important;
        }

        .edit_lable {
            color: #01d28e;
        }

        .form-control-placeholder {
            position: relative;
        }
    </style>
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="wrap">
                <div class="login-wrap p-4 p-md-5">
                    <div class="w-200">
                        <h3 class="mb-4" style="font-family: Arial;text-align: center; font-weight: 700; color: #01d28e;margin-top: 30px;">
                            Thông tin tài khoản
                        </h3>
                    </div>

                    @using (Html.BeginForm("DetailAccount", "Home", FormMethod.Post, new { @class = "signin-form" }))
                    {

                        @Html.AntiForgeryToken()
                        <div class="form-group mt-3">
                            <div>Tên đăng nhập</div>
                            @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div>Mật khẩu</div>
                            <input type="password" class="form-control" value="@Url.Content(Model.MatKhau)" id="MatKhau" name="MatKhau" readonly />
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mt-3">
                            <div>Tên khách hàng</div>
                            @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mt-3">
                            <div>Email</div>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mt-3">
                            <div>Số điện thoại</div>
                            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mt-3">
                            <div>Địa chỉ</div>
                            @Html.TextAreaFor(model => model.DiaChi, new { @class = "md-textarea form-control", @rows = 3, @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                        <input type="hidden" name="TinhTrang" value="@Url.Content(Model.TinhTrang.ToString())" />
                        <input type="hidden" name="Quyen" value="@Url.Content(Model.Quyen.ToString())" />
                        <div class="form-group">
                            <button type="button" id="btnSuaThongTin" class="form-control btn btn-primary rounded submit px-3">Sửa thông tin</button>
                            <br />
                            <button type="submit" id="btnLuuThongTin" style="display: none" class="form-control btn btn-primary rounded submit px-3">Lưu thay đổi</button>
                            <center><button type="button" id="btnHuy" style="display: none; margin-top:10px;" class="btn btn-danger">Huỷ</button></center>
                        </div>

                    }
                    <p class="text-center">Quay trở lại <a href="Login">Đăng nhập</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.Message!="")
{
    <script>
        alert(ViewBag.Message);
    </script>
    ViewBag.Message = "";
}


@section Scripts {
    <script src="~/wwwroot/js/jquery.min.js"></script>
    <script src="~/wwwroot/js/popper.js"></script>
    <script src="~/wwwroot/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/wwwroot/js/index.js"></script>
    
}

