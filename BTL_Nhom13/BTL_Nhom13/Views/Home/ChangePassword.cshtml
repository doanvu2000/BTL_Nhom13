@model BTL_Nhom13.Models.TaiKhoan

@{
    ViewBag.Title = "DetailAccount";
}


@section ImportLibraryLogin {
    <link rel="stylesheet" href="~/wwwroot/css/style.css" />

    <style>
        .container {
        }

        .container {
            /*position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);*/
        }

        @*.signin-form {
            margin-top: 50px;
        }*@

            .signin-form .form-group {
                margin-bottom: 15px !important;
            }

        body .signin-form .form-group label {
            text-transform: none !important;
            font-size: 16px !important;
            color: gray !important;
        }

        body {
            font-family: Arial !important;
        }

        .edit_lable {
            color: #01d28e;
        }

        .form-control-placeholder {
            position: relative;
        }
    </style>
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="wrap">
                <div class="login-wrap p-4 p-md-5">
                    <div class="w-200">
                        <h3 class="mb-4" style="font-family: Arial;text-align: center; font-weight: 700; color: #01d28e;margin-top: 30px;">
                            Đổi mật khẩu
                        </h3>
                    </div>

                    @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { @class = "signin-form" }))
                    {

                        @Html.AntiForgeryToken()
                        <form>
                            <div class="form-group">
                                <div>Mật khẩu cũ</div>
                                <input type="password" name="OldPassword" class="form-control" />
                            </div>
                            <div class="form-group">
                                <div>Mật khẩu mới</div>
                                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", @id = "new_pass" } })
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <div>Nhập lại mật khẩu</div>
                                <input type="password" class="form-control" id="again_pass" />
                            </div>
                            @Html.HiddenFor(model => model.TenTaiKhoan)
                            @Html.HiddenFor(model => model.TinhTrang)
                            @Html.HiddenFor(model => model.Quyen)
                            @Html.HiddenFor(model => model.TenKhachHang)
                            @Html.HiddenFor(model => model.Email)
                            @Html.HiddenFor(model => model.SoDienThoai)
                            @Html.HiddenFor(model => model.DiaChi)
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6" style="text-align: center;">
                                        <input type="submit" value="Thay đổi" id="btn-change-pass" class="btn btn-primary" />
                                    </div>
                                    <div class="col-md-6" style="text-align: center;">
                                        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-warning" })
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/wwwroot/js/jquery.min.js"></script>
    <script src="~/wwwroot/js/popper.js"></script>
    <script src="~/wwwroot/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/wwwroot/js/index.js"></script>
    <script src="~/wwwroot/js/change_password.js"></script>
    @if (ViewBag.Message != null)
    {
        <script>
            alert('Mật khẩu cũ không chính xác!!!');
        </script>
        ViewBag.Message = null;
    }
}

