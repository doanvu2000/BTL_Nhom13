@model IEnumerable<BTL_Nhom13.Models.TaiKhoan>
@{
    ViewBag.Title = "Account";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title{
    Tài khoản
}
<style>
    .normal-text {
        text-transform: none;
    }
</style>
<div class="container-fluid">
    <a href="@Url.Action("Create", "AdminTaiKhoans")" class="btn btn-sm btn-primary normal-text" role="button">Thêm mới</a>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Danh sách tài khoản</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="text-primary">
                            <th>Tên tài khoản</th>
                            <th>Mật khẩu</th>
                            <th>Quyền</th>
                            <th>Tình trạng</th>
                            <th>Tên khách hàng</th>
                            <th>Email</th>
                            <th>Hành động</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.TenTaiKhoan)</td>
                                        <td>@Html.DisplayFor(modelItem => item.MatKhau)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Quyen)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TinhTrang)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TenKhachHang)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", new { id = item.TenTaiKhoan }, new { @class = "btn btn-sm btn-primary normal-text" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
