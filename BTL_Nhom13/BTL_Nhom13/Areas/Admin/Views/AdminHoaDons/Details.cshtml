@model BTL_Nhom13.Models.HoaDon

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section Title{
    Chi tiết hóa đơn
}
<style>
    .dl-horizontal {
        padding-left: 10rem;
    }

    dl dd {
        padding-left: 7rem;
    }
    .col-md-6 {
        padding-left: 7rem;
    }
</style>

<div>
    <div class="row">
        <div class="col-md-6">
            @Html.DisplayNameFor(model => model.GioHang.TaiKhoan.TenKhachHang): 
            @Html.DisplayFor(model => model.GioHang.TaiKhoan.TenKhachHang)
        </div>
        <div class="col-md-6">
            @Html.DisplayNameFor(model => model.NgayDat)
            @Html.DisplayFor(model => model.NgayDat)
        </div>
    </div>
    <div class="row" style="margin-top:.5rem">
        <div class="col-md-6">
            @Html.DisplayNameFor(model => model.TinhTrang): 
            @Html.DisplayFor(model => model.TinhTrang)
        </div>
        <div class="col-md-6">
            @Html.DisplayNameFor(model => model.PhiShip)
            @Html.DisplayFor(model => model.PhiShip) VND
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Sản phẩm</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="text-primary">
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Chất lượng</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.GioHang.ChiTietGioHangs)
                                {
                                    <tr>
                                        <td>
                                            @{
                                                string imagePath = "~/wwwroot/image/" + item.SanPham.Anh;
                                            }
                                            <img src="@Url.Content(imagePath)" width="50" class="img-thumbnail" />
                                            <br />
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.SanPham.TenSP)</td>
                                        <td>@Html.DisplayFor(modelItem => item.SanPham.ChatLuong)</td>
                                        <td>@Html.DisplayFor(modelItem => item.SanPham.Gia) VND</td>
                                        <td>@Html.DisplayFor(modelItem => item.SoLuongMua)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @{ 
                        decimal thanhTien = Model.GioHang.ChiTietGioHangs.Select(c => c.SoLuongMua * c.SanPham.Gia).Sum() + Model.PhiShip;
                        System.Globalization.CultureInfo cul = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");   // try with "en-US"
                        string tong = thanhTien.ToString("#,###", cul.NumberFormat);
                    }
                    <hr />
                    <p style="text-align:right;font-weight:bold">Thành tiền: @tong VND</p>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.MaHoaDon }, new { @class = "btn btn-sm btn-primary normal-text" })
    @Html.ActionLink("Quay lại", "Receipt", null, new { @class = "btn btn-sm btn-primary normal-text" })
</p>
