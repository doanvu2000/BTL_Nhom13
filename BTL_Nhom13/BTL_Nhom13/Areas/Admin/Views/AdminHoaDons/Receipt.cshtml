@model IEnumerable<BTL_Nhom13.Models.HoaDon>
@{
    ViewBag.Title = "Receipt";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title{
    Hóa đơn
}
<style>
    .normal-text {
        text-transform: none;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Danh sách hóa đơn</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="text-primary">
                            <th>Mã hóa đơn</th>
                            <th>Ngày đặt</th>
                            <th>Tình trạng</th>
                            <th>Phí vận chuyển</th>
                            <th>Ghi chú</th>
                            <th>Hành động</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.MaHoaDon)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NgayDat)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TinhTrang)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PhiShip)</td>
                                    <td>@Html.DisplayFor(modelItem => item.GhiChu)</td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaHoaDon }, new { @class = "btn btn-sm btn-primary normal-text" })
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaHoaDon }, new { @class = "btn btn-sm btn-primary normal-text" })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>